{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src/astro.d.ts", "src/env.d.ts", "**/*"],
  "exclude": ["dist", "public", "playwright-report", "coverage"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true
  }
}
